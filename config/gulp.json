{
  "jade": {
    "src": [
      "src/**/*.jade"
    ],
    "build": "public",
    "watch": "src/**/*.jade"
  },
  "sass": {
    "src": [
      "src/css/**/*.sass"
    ],
    "build": "public/css",
    "watch": "src/css/**/*.sass",
    "includePaths": []
  },
  "browserify": {
    "src": [
      "src/js/"
    ],
    "scripts" : "**/*.js",
    "extname": ".bundle.js",
    "build": "public/js"
  }
}
